{
  "name": "evermetrics-api",
  "version": "1.0.0",
  "description": "Evermetrics REST API",
  "scripts": {
    "lint": "standard",
    "test": "npm run lint && NODE_ENV=test ava -require babel-register test/**-test.js"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "transform-async-to-generator"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eversocial/evermetrics-api.git"
  },
  "author": "Eversocial",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eversocial/evermetrics-api/issues"
  },
  "homepage": "https://github.com/eversocial/evermetrics-api#readme",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-eslint": "^7.1.1",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.18.0",
    "micro": "^4.1.1",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "standard": "^8.6.0",
    "test-listen": "^1.0.0",
    "uuid-base62": "^0.1.0"
  },
  "dependencies": {
    "evermetrics-dbs": "file:../evermetrics-dbs",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "bluebird": "^3.4.7",
    "gravatar": "^1.6.0",
    "http-hash": "^2.0.0",
    "jsonwebtoken": "^7.2.1",
    "token-extractor": "^0.1.6"
  }
}
